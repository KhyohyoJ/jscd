<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jscd.app.mapper.instructorInfoMapper">

    <!--강사 정보 관리 -->

    <!-- 등급이 강사로 변경 -> 강사 정보 insert -->
    <insert id="insert" parameterType="InstructorInfoDto">
        insert into instructorInfo
            (iscrNo, mebrNo, intro, status, hourPmt)
        values (#{iscrNo}, #{mebrNo}, #{intro}, #{status}, #{hourPmt})
    </insert>

    <!--    강사 인원수-->
    <select id="count" resultType="int">
        select count(*)
        from instructorInfo
    </select>

    <sql id="selectInstructor">
        select i.iscrNo,
               m.id,
               m.name,
               m.birth,
               concat(m.phone1, m.phone2, m.phone3) as phone,
               i.intro,
               i.status,
               i.hourPmt,
               m.acct,
               i.regDate,
               i.etc
        from instructorInfo i
                 join member m on i.mebrNo = m.mebrNo

    </sql>

    <!-- 강사 전체 정보 확인(강사 + 회원 조인)-->
    <select id="selectAll" parameterType="map" resultType="InstructorMemberInfoDto">
        <include refid="selectInstructor"/>
        order by i.iscrNo asc
        limit #{offset}, #{pageSize};
    </select>

    <!--  강사 정보 상세 확인-->
    <select id="select" parameterType="Map" resultType="InstructorMemberInfoDto">
        <include refid="selectInstructor"/>
        where i.iscrNo = #{iscrNo};
    </select>

    <!-- update-->
    <update id="update" parameterType="InstructorInfoDto">
        update instructorInfo
        set intro      = #{intro}
          , status     = #{status}
          , hourPmt    = #{hourPmt}
          , etc        = #{etc}
          , modifyDate = now()
        where iscrNo = #{iscrNo}
    </update>

    <!--    탈퇴하거나(회원), 등급 조정 시(관리자) ->매개변수로 회원고유번호가 적합 delete-->
    <delete id="delete" parameterType="Integer">
        delete
        from instructorInfo
        where mebrNo = #{mebrNo}
    </delete>

    <delete id="deleteAll">
        delete
        from instructorInfo
    </delete>


    <sql id="searchCondition">
        <choose>
            <when test='option=="T"'>
                AND m.name LIKE concat('%', #{keyword}, '%')
            </when>
            <when test='option=="W"'>
                AND m.id LIKE concat('%', #{keyword}, '%')
            </when>
            <otherwise>
                AND i.status LIKE concat('%', #{keyword}, '%')
            </otherwise>
        </choose>
    </sql>

<!--    검색 조건 select문-->
    <select id="searchSelectPage" parameterType="SearchCondition" resultType="InstructorMemberInfoDto">
        <include refid="selectInstructor"/>
        WHERE true
        <include refid="searchCondition"/>
        order by i.iscrNo asc
        limit #{offset},#{pageSize};
    </select>

    <!--검색 결과 개수(몇개인지 알아야 페이징처리 할 수 있다)-->
    <select id="searchResultCnt" parameterType="SearchCondition" resultType="int">
        SELECT count(*)
        from instructorInfo i
        join member m on i.mebrNo = m.mebrNo
        WHERE true
        <include refid="searchCondition"/>
    </select>

</mapper>
